contract BunnyNFTBridgeFSN is Ownable, IERC721Receiver {
    using SafeMath for uint256;
    uint256 public performanceFee = 1 ether;
    uint256 public feeAmount = 10 * 10**18;
    address public feeToken;
    address public nft;
    address public feeAddress;

    struct Lock {
        uint256 tokenId;
        bool withdrawn;
    }

    mapping(address => uint256[]) public locks;
    mapping(uint256 => bool) public withdrawn;

    event Deposit(uint256[] indexed tokenId, address indexed owner);
    event Withdraw(uint256[] indexed tokenId, address indexed owner);

    constructor(
        address _token,
        address _nft,
        address _feeAddress
    ) {
        feeToken = _token;
        nft = _nft;
        feeAddress = _feeAddress;
    }

    function deposit(uint256[] memory tokenIds) external payable {
        require(msg.value >= performanceFee, "Not Enough PerformanceFee");
        payable(feeAddress).transfer(performanceFee);
        if (msg.value > performanceFee)
            payable(msg.sender).transfer(msg.value - performanceFee);
        require(
            IERC20(feeToken).balanceOf(msg.sender) >= tokenIds.length,
            "Not Enough Fee"
        );
        uint256 prevAmount = IERC20(feeToken).balanceOf(address(this));
        IERC20(feeToken).transferFrom(
            msg.sender,
            address(this),
            feeAmount * tokenIds.length
        );
        uint256 afterAmount = IERC20(feeToken).balanceOf(address(this));
        IERC20(feeToken).transfer(feeAddress, afterAmount - prevAmount);
        for (uint256 i = 0; i < tokenIds.length; i++) {
            IERC721(nft).burn(tokenIds[i]);
            locks[msg.sender].push(tokenIds[i]);
            withdrawn[tokenIds[i]] = false;
        }
        emit Deposit(tokenIds, msg.sender);
    }

    function validateTokens(uint256[] memory tokenIds, address from)
        public
        view
        returns (bool)
    {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            bool flag;
            for (uint256 j = 0; j < locks[from].length; j++) {
                if (
                    tokenIds[i] == locks[from][j] &&
                    withdrawn[locks[from][j]] == false
                ) {
                    flag = true;
                    break;
                }
            }
            if (!flag) return false;
        }
        return true;
    }

    function withdraw(
        uint256[] memory tokenIds,
        address from,
        address to
    ) external {
        require(
            msg.sender == owner() ||
                (validateTokens(tokenIds, from) && msg.sender == from),
            "There is not nft that can withdraw"
        );
        for (uint256 i = 0; i < tokenIds.length; i++) {
            IERC721(nft).mint(to, tokenIds[i]);
            withdrawn[tokenIds[i]] = true;
        }
        emit Withdraw(tokenIds, to);
    }

    function setPerformanceFee(uint256 _newFee) external onlyOwner {
        performanceFee = _newFee;
    }

    function setFeeToken(address _newToken) external onlyOwner {
        feeToken = _newToken;
    }

    function setFeeAmount(uint256 _newAmount) external onlyOwner {
        feeAmount = _newAmount;
    }

    function setFeeAddress(address _newAddress) external onlyOwner {
        feeAddress = _newAddress;
    }

    function setWithdrawn(uint256 id, bool flag) external onlyOwner {
        withdrawn[id] = flag;
    }

    function onERC721Received(
        address,
        address from,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        require(from == address(0x0), "Cannot send nfts to Vault directly");
        return IERC721Receiver.onERC721Received.selector;
    }
}
